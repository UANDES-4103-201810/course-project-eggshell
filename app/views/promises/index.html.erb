<p id="notice"><%= notice %></p>

<h1>Promises</h1>
<h2>
  <td> <%= link_to "Home", home_index_path  %></td>
</h2>
<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Condition</th>
      <th>Buyer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promises.each do |promise| %>
      <tr>
        <td><%= promise.value %></td>
        <td><%= promise.condition %></td>
        <td><%= promise.buyer %></td>
        <td><%= link_to 'Show', promise %></td>
        <td><%= link_to 'Edit', edit_promise_path(promise) %></td>
        <td><%= link_to 'Destroy', promise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

