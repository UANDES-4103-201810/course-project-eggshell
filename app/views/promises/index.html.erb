<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

</head>
<title> Session</title>

<body>


<div class="container">


  <nav class="navbar navbar-dark bg-primary">
    <div class="row">
      <h1 style="color:white">Eggshell</h1>
      <div class=" col">
        <div class="row">
          <a href="/home/index" class="btn btn-primary" role="button">Home</a>
          <a href="/profiles" class="btn btn-primary" role="button">User profile</a>
          <a href="/users" class="btn btn-primary" role="button">Users List</a>
          <a href="/projects" class="btn btn-primary" role="button">My projects</a>
          <a href="/projects" class="btn btn-primary" role="button">Projects</a>
          <a href="/sessions/new" class="btn btn-primary" role="button">Log in</a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      </div>
      <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
    </div>

  </nav>


  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
      <% @promises.each do |promise| %>

          <div class="col-md-4">
            <div class="card mb-4 box-shadow" style="background-color: lightskyblue">
              <div class="card-body">
                <h2>Value</h2>
                <%= promise.value %>
                <h2>Condition</h2>
                <%= promise.condition %>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary"> Buy</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_promise_path(promise) %></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Destroy', promise, method: :delete, data: {confirm: 'Are you sure?'} %>
                    </button>

                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>

      <% end %>
    </div>
  </div>
  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'New Promise', new_promise_path %></button>


</div>


  <div class=col-4>


<p id="notice"><%= notice %></p>

<h1>Promises</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Value</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promises.each do |promise| %>
      <tr>
        <td><%= promise.Project %></td>
        <td><%= promise.value %></td>
        <td><%= promise.condition %></td>
        <td><%= link_to 'Show', promise %></td>
        <td><%= link_to 'Edit', edit_promise_path(promise) %></td>
        <td><%= link_to 'Destroy', promise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Promise', new_promise_path %>


  </div>
</div>
</body>
</html>
