
  <h1>Best of the week</h1>







<div class="album py-12 album-transparent ">
  <div class="container ">
      <div class="row" >
        <% @featured.each do |featured| %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow" style="border-radius: 25px">
            <h1><%= featured.name %></h1>
            <img class="card-img-top" src="<%= if featured.multimedia != nil then featured.multimedia.image.url end %>" style="z-index: 2;height: 225px; width: 100%; display: block;" >
            <div class="card-body">
              <h3>Goal</h3>
              <p class="card-text"><%= featured.goal %></p>
              <h3>Colected</h3>
              <p class="card-text"><%= featured.money_colected %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <% if user_signed_in? && featured.User_id == current_user.id%>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', featured %></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_project_path(featured) %></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Destroy', featured, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                  <%else%>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', featured %></button>
                  <%end%>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>

  </div>
</div>



</body>
</html>
