  <link href="style.css" rel="stylesheet">
</head>
<body>

<!-- Navigation ------------------------------------------------------------------------------------------------------------------------------------------>
<nav class="navbar navbar-expand-md navbar-light bg-light sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><img src="/assets/boards.png"></a>
    <h1 style="color:mediumblue">EGGSHELL</h1>
    <button class="navbar-toggler" type="button" data-toggle="collapse"
            data-target="#navbarResponsive">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <a class="btn btn-primary m-1" href="/home/index">Home</a>
          </li>

          <li class="nav-item active">
            <a class="btn btn-primary m-1" href="/projects">Projects</a>
          </li>

          <li class="nav-item active">
            <a class="btn btn-primary m-1" href="/projects">My projects</a>
          </li>

          <li class="nav-item active">
            <a class="btn btn-primary m-1" href="/profiles">User profile</a>
          </li>
        <%else%>
          <li class="nav-item active">
            <a class="btn btn-primary m-1" href="/home/index">Home</a>
          </li>

          <li class="nav-item active">
            <a class="btn btn-primary m-1" href="/projects">Projects</a>
          </li>
        <%end %>

        <% if user_signed_in? %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :style=> 'color:#FFFFFF;', :class => 'btn btn-primary m-1'%>
        <%else%>
          <a href="/users/sign_in" class="btn btn-primary m-1"  role="button">Log in</a>


        <%end %>
        <div class="row">
          <div class="col">
            <input class="form-control mt-1 m-1" type="search" placeholder="Search" aria-label="Search">
          </div>
          <button class="btn btn-success mt-1 mb-1 m-1" type="submit">Search</button>
        </div>
      </ul>
    </div>
  </div>


</nav>

<% session[:current_project_id ] = @project.id%>
  <div class = "container">
    <div class = "row">
      <div class = " col-7">
        <div class = "container">
          <h1><%= @project.name %></h1>
          <div class = "col-6">
            <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp; text=Falcon Heavy" alt="cohete feed" style="height: 225px; width: 100%; display: block;" src="/assets/cohete.jpg">
            <p><%= @project.description %> </p>
          </div>
        </div>
      </div>
      <div class=" col-5">
        <div class="container" style="background-color: dodgerblue; border-radius: 25px; margin: 10px;">
          <h2>Objective</h2>
          <%= @project.goal %>
          <h2>Colected</h2>
          <%= @project.money_colected%>
          <h2>End of project</h2>
          <%= @project.expiration_date %>
            <h2> Want to support? </h2>
            <input class="form-control" type="text" placeholder="Amount">
             <button type="button" class="btn btn-success" style="width: 50%; border-radius: 25px;">Donate</button>
        </div>
        <% if user_signed_in? %>
        <a  class="btn btn-info" style="width: 100%; background-color: cornflowerblue; margin: 5px; border-radius: 25px" href="/wishlists/new" >Add to whishlist</a>
        <a href="/promises" type="button" class="btn btn-info" style="width: 100%; background-color: cornflowerblue; margin: 5px; border-radius: 25px">Promises</a>
<% else %>
          <a href="/promises" type="button" class="btn btn-info" style="width: 100%; background-color: cornflowerblue; margin: 5px; border-radius: 25px">Promises</a>
<%end%>
                </div>
              </div>
            </div>
          </div>






