<p id="notice"><%= notice %></p>

<h1>Proyects</h1>
<h2>
  <td> <%= link_to "Home", home_index_path  %></td>
</h2>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Goal</th>
      <th>Money colected</th>
      <th>Expiration date</th>
      <th>State</th>
      <th>Start date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proyects.each do |proyect| %>
      <tr>
        <td><%= proyect.User %></td>
        <td><%= proyect.name %></td>
        <td><%= proyect.description %></td>
        <td><%= proyect.category %></td>
        <td><%= proyect.goal %></td>
        <td><%= proyect.money_colected %></td>
        <td><%= proyect.expiration_date %></td>
        <td><%= proyect.state %></td>
        <td><%= proyect.start_date %></td>
        <td><%= link_to 'Show', proyect %></td>
        <td><%= link_to 'Edit', edit_proyect_path(proyect) %></td>
        <td><%= link_to 'Destroy', proyect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Proyect', new_proyect_path %>
