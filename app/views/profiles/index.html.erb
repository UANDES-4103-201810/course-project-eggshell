<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

</head>
<title> Session</title>

<body>


<div class="container">


  <nav class="navbar navbar-dark bg-primary">
    <div class="row">
      <h1 style="color:white">Eggshell</h1>
      <div class=" col">
        <div class="row">
          <a href="/home/index" class="btn btn-primary" role="button">Home</a>
          <a href="/profiles" class="btn btn-primary" role="button">User profile</a>
          <a href="/users" class="btn btn-primary" role="button">Users List</a>
          <a href="/projects" class="btn btn-primary" role="button">My projects</a>
          <a href="/projects" class="btn btn-primary" role="button">Projects</a>
          <a href="/sessions/new" class="btn btn-primary" role="button">Log in</a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      </div>
      <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
    </div>

  </nav>

  <div class=col-4>



<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Nacionality</th>
      <th>Age</th>
      <th>Sex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.User %></td>
        <td><%= profile.name %></td>
        <td><%= profile.nacionality %></td>
        <td><%= profile.age %></td>
        <td><%= profile.sex %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>


</div>
</div>
</body>
</html>
